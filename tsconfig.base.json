{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "noPropertyAccessFromIndexSignature": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@case/contracts": ["libs/contracts/src/index.ts"],
      "@case/libs": ["libs/src/index.ts"],
      "@case/rmq-configs": ["libs/rmq-configs/src/index.ts"],
      "@case/typeorm": ["libs/typeorm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
